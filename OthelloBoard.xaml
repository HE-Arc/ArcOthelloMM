<Window x:Class="ArcOthelloMM.OthelloBoard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArcOthelloMM"
        mc:Ignorable="d"
        Title="OthelloBoard" d:DesignWidth="800" d:DesignHeight="600" MinWidth="400" MinHeight="400" SizeChanged="board_SizeChanged">
    <Grid Margin="50px">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0" Margin="10">
            <Button>Left</Button>
        </StackPanel>
        <Border Name="border" Grid.Column="1" BorderBrush="Black" BorderThickness="2">
            <Grid  x:Name="board" />
        </Border>
        <StackPanel Grid.Column="2" Margin="10">
            <Button>Right</Button>
        </StackPanel>
    </Grid>
</Window>
