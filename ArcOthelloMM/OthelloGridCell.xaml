<UserControl x:Class="ArcOthelloMM.OthelloGridCell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ArcOthelloMM"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100" HorizontalAlignment="Center" VerticalAlignment="Center">
    <Button x:Name="button" BorderThickness="1">
        <Viewbox StretchDirection="Both" Stretch="Uniform">
            <Grid x:Name="token" Height="100" Width="100" Margin="10" Background="Transparent">
                <Ellipse x:Name="tokenContent" Fill="Fuchsia" StrokeThickness="4"/>
            </Grid>
        </Viewbox>
    </Button>
</UserControl>
